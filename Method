NORMAL = lasagne.init.Normal()
UNIFORM = lasagne.init.Uniform()
HE_NORMAL = lasagne.init.HeNormal(gain='relu')
HE_UNIFORM = lasagne.init.HeUniform(gain='relu')
CONSTANT = lasagne.init.Constant(val=CONSTANT_VALUE)
